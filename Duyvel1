        task.spawn(function()
            while aura do
                local args = {8, 2}
                local gui = player:WaitForChild("PlayerGui"):FindFirstChild(selectedItem)
                if gui then
                    local btn = gui:FindFirstChild("Skill1b", true) -- tìm sâu trong cây con
                    if btn and btn:FindFirstChild("Z") and btn.Z:FindFirstChild("TextButtonm1") and btn.Z.TextButtonm1:FindFirstChild("Hitbox") then
                        btn.Z.TextButtonm1.Hitbox:FireServer(unpack(args))
                    end
                end
                task.wait(0.1)
            end
        end)
    end
end)
drops:Button("Raid farm sword", function()local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Characteror player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- Lấy NPC thứ 4 trong Wave1
local npc = workspace.Wave1:GetChildren()[4]

if npc and npc:FindFirstChild("HumanoidRootPart") then
    -- Đặt vị trí cách NPC 0.5 studs lên trên
    hrp.CFrame = npc.HumanoidRootPart.CFrame * CFrame.new(0, npc.HumanoidRootPart.Size.Y/2 + 0.5, 0)

    -- Giữ không rơi xuống
    local bv = Instance.new("BodyVelocity")
    bv.Velocity = Vector3.new(0, 0, 0)
    bv.MaxForce = Vector3.new(1e9, 1e9, 1e9)
    bv.Parent = hrp
end

end)
local drops = serv:Channel("BÚ 🤑⭐")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local selectedPlayer = nil

-- Hàm lấy danh sách tên player
local function GetPlayerNames()
    local names = {}
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            table.insert(names, plr.Name)
        end
    end
    return names
end

-- Dropdown
drops:Dropdown(
    "Chọn người chơi",
    GetPlayerNames(),
    function(value)
        selectedPlayer = value
        print("Đã chọn:", selectedPlayer)
    end
)

-- Nút Gay
drops:Button("Lấy skill của người đó", function()
    if not selectedPlayer then
        warn("Bạn chưa chọn người chơi")
        return
    end

    local target = Players:FindFirstChild(selectedPlayer)
    if not target then
        warn("Không tìm thấy player:", selectedPlayer)
        return
    end

    -- Chỉ kích hoạt RemoteEvent/BindableEvent "Fire" của player đó
    for _, obj in ipairs(target:GetDescendants()) do
        if obj:IsA("BindableEvent") or obj:IsA("RemoteEvent") then
            if obj.Name == "Fire" then
                if obj:IsA("BindableEvent") then
                    pcall(function()
                        obj:Fire()
                    end)
                elseif obj:IsA("RemoteEvent") then
                    pcall(function()
                        obj:FireServer()
                    end)
                end
            end
        end
    end

    print("Đã kích hoạt các 'Fire' Event của:", selectedPlayer)
end)
